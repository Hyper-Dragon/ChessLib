<UserControl x:Class="ChessLib.UCI.WPF.OptionsControls.ComboOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessLib.UCI.WPF.OptionsControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{Binding Name}" Grid.Row="0"></TextBlock>
        <ComboBox Grid.Row="1" ItemsSource="{Binding Options}" SelectedValue="{Binding Value}"/>
    </Grid>
</UserControl>
