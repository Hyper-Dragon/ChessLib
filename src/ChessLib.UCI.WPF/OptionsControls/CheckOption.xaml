<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessLib.UCI.WPF.OptionsControls"
             xmlns:Options="clr-namespace:ChessLib.UCI.Commands.FromEngine.Options;assembly=ChessLib.UCI" 
             x:Class="ChessLib.UCI.WPF.OptionsControls.CheckOption"
             mc:Ignorable="d" 
            
    d:DataContext="{d:DesignData Source=/SampleData/UCICheckOptionSampleData.xaml}" MinWidth="300" 
    
   >


    <Grid>
        <CheckBox IsChecked="{Binding Value}">
            <TextBlock Text="{Binding Name}"  FontSize="14" />
        </CheckBox>
    </Grid>
</UserControl>
